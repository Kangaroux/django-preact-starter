{
    "include": [
        "./client/src/**/*.ts",
        "./client/src/**/*.tsx",
    ],
    "compilerOptions": {
        "types": [
            "./client/src/types/*.d.ts"
        ],
        "outDir": "./dist",
        "target": "es5",
        "module": "es6",
        "lib": [
            "dom",
            "es6"
        ],
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "h",
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true
    }
}
